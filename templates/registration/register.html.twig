{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center align-items-center" style="height: 100vh;"> {# Centrage vertical #}
            <div class="col-md-8"> {# Utilisation de col-md-8 pour occuper 2/3 de l'Ã©cran #}
                <div class="card">
                    <div class="card-body">
                        <h1>Register</h1>

                        {{ form_errors(registrationForm) }}

                        {{ form_start(registrationForm) }}
                            {{ form_row(registrationForm.identity)}}
                            {{ form_row(registrationForm.username) }}
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Password'
                            }) }}
                            {{ form_row(registrationForm.agreeTerms) }}

                            <button type="submit" class="btn">Register</button>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
