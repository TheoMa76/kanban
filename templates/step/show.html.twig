{% extends 'base.html.twig' %}

{% block title %}Step{% endblock %}

{% block body %}
    <h1>Step</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ step.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ step.title }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ step.position }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ step.createdAt ? step.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ step.updatedAt ? step.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_step_index') }}">back to list</a>

    <a href="{{ path('app_step_edit', {'id': step.id}) }}">edit</a>

    {{ include('step/_delete_form.html.twig') }}
{% endblock %}
